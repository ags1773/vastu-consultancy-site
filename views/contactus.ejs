<% include partials/header %>
<body id='contactUs'>
  <nav class="ui secondary menu">
    <a href='/' class="item"><span>Home</span></a>
    <div class="right menu">
      <% if(currentUser){ %>
        <div class="ui dropdown item">
          Logged in as: <%= currentUser.username %> <i class="dropdown icon"></i>
          <div class="menu">
            <a href="/logout" class="item"><i class="sign out icon"></i>Sign-out</a>
            <a href="/customerdata" class="item"><i class="users icon"></i>Customer Data</a>
          </div>
        </div>
      <% } %>
      <a href="/contact-us" class="item">
        <button class="ui right labeled icon button teal">
          <i class="right arrow icon"></i>
          Contact Us
        </button>
      </a>
    </div>
  </nav>

<main>
  <% include partials/alerts %>
  <div id='mainContainer'>
    <div id='mapContainer' class="ui raised segment">
      <div id="map"></div>
      <div>
        <!-- <br> -->
        <h3>Address:</h3>
        <p>Lorem ipsum dolor sit amet, consectetur
        <br>
        adipisicing elit. Officia aut modi
        <br>
        ZIP: 500003
        <br>
        <b>Phone: +91 8007006005</b></p>
      </div>
    </div> <!-- /mapContainer -->
    <div class='divider'></div>
    <div id="userInput" class="ui raised segment">
      <h3 class="centerAlign">Schedule an appointment</h3>
      <form class="ui form" action="/contact-us" method="POST">
        <div class="field">
          <input type="text" name="fname" placeholder="First Name">
        </div>
        <div class="field">
          <input type="text" name="lname" placeholder="Last Name">
        </div>
        <div class="field">
          <input type="text" name="phone" placeholder="Phone Number">
        </div>
        <div class="field">
          <input type="text" name="email" placeholder="e-mail Address">
        </div>
        <div class="field">
          <div class="ui checkbox">
            <input type="checkbox" tabindex="0">
            <label>It's okay to contact me</label>
          </div>
        </div>
        <button class="ui button teal fluid disabled" type="submit">Submit</button>
      </form>
    </div><!-- /userInput -->
  </div><!-- /mainContainer -->

</main>


<!-- Script for running map API -->
<script type="text/javascript">
function initMap() {
    var uluru = {lat: -25.363, lng: 131.044};
    var map = new google.maps.Map(document.getElementById('map'), {
      zoom: 4,
      center: uluru
    });
    var marker = new google.maps.Marker({
      position: uluru,
      map: map
    });
  }
</script>
