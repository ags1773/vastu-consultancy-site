<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Vastu Website</title>
  <link rel="stylesheet" href="/font-awesome.min.css">
  <link rel="stylesheet" href="/semantic-ui/semantic.min.css">
  <link rel="stylesheet" href="/semantic-ui/calendar.min.css">
  <link rel="stylesheet" href="/styles.css">
  <style>

  </style>
</head>

<body id="archivesPage">
<% include partials/navbar %>

<main>
  <% include partials/alerts %>
  <form id="pipeline" style="display:none;">
    <input type="hidden" name="pipeline">
    <input type="hidden" name="action">
  </form>
  <div id="menuBar" class="ui fluid three item inverted menu">
    <a href="/customerdata" class="item"><i class="users icon"></i>Customer Records</a>
    <a class="active teal item"><i class="folder open icon"></i>Archives</a>
    <a href="/customerdata/trash" class="item"><i class="trash outline icon"></i>Trash</a>
  </div>
  <form id="filterBar" class="ui borderless stackable menu" action="/customerdata/archives" method="POST">
    <% include partials/filterbar %>
  </form>
  <div class="ui container">
    <table class="ui compact celled striped definition table">
      <thead class="full-width">
        <tr>
          <th class="collapsing">
            <div class="ui checkbox fitted">
              <input type="checkbox"> <label></label>
            </div>
          </th>
          <th colspan="4">
            <button id="arch2trash" class="ui small red labeled icon button">
              <i class="trash outline icon"></i> Move To Trash
            </button>
            <button id="arch2cust" class="ui small green labeled icon button">
              <i class="reply icon"></i> Remove from Archive
            </button>
          </th>
        </tr>
        <tr>
          <th></th>
          <th>Customer Name</th>
          <th>Phone Number</th>
          <th>Email ID</th>
          <th>Date & Time</th>
        </tr>
      </thead>
      <tbody>
        <% for(var i=0; i<archivedRecord.length; i++){ %>
          <tr>
            <td class="collapsing">
              <div class="ui fitted checkbox">
                <input type="checkbox"> <label></label>
              </div>
            </td>
            <td><%= archivedRecord[i].name %></td>
            <td><%= archivedRecord[i].phone %></td>
            <td><%= archivedRecord[i].email %></td>
            <td><%= archivedRecord[i]._id.getTimestamp() %></td>
          </tr>
        <% } %>
      </tbody>
      <tfoot class="full-width">
        <tr>
          <th colspan='4'>
            <div class="centerAlign">
              <div class="ui pagination menu">
                <a class="active item">1</a>
                <a class="item">2</a>
                <a class="item">3</a>
                <a class="item">4</a>
                <div class="disabled item">.....</div>
                <a class="item">10</a>
              </div>
            </div>
          </th>
          <th colspan='1'>
            <p class="recNumDisplay"><%= archivedRecord.length %> Record(s) found</p>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>
</main>

<footer>
  <hr>
  <p>sample text</p>
  <p>&copy;XYZ Company, all rights reserved</p>
  <a href="/login">LOGIN</a>
  <a href="/register">REGIStER</a>
</footer>

<script type="text/javascript" src='/jquery.min.js'></script>
<script type="text/javascript" src='/semantic-ui/semantic.min.js'></script>
<script type="text/javascript" src='/semantic-ui/calendar.min.js'></script>
<script> var mainGlobalObject = {archivedRecord : <%- JSON.stringify(archivedRecord) %>}; </script>
<script type="text/javascript" src='/script.js'></script>
</body>
</html>
